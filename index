  <script>
    function openForm() { document.getElementById('listingForm').style.display = 'block'; }

    document.getElementById('contact-form').addEventListener('submit', function(event) {
      event.preventDefault();
      // Copy values to hidden fields
      document.getElementById('main_category').value = document.getElementById('main_category_input').value;
      document.getElementById('sub_category').value = document.getElementById('sub_category_input').value;
      document.getElementById('town1').value = document.getElementById('town1_input').value;
      document.getElementById('town2').value = document.getElementById('town2_input').value;
      document.getElementById('company_name').value = document.getElementById('company_name_input').value;
      document.getElementById('slogan').value = document.getElementById('slogan_input').value;
      document.getElementById('label1').value = document.getElementById('label1_input').value;
      document.getElementById('colour1').value = document.getElementById('colour1_input').value;
      document.getElementById('number1').value = document.getElementById('number1_input').value;
      document.getElementById('label2').value = document.getElementById('label2_input').value;
      document.getElementById('colour2').value = document.getElementById('colour2_input').value;
      document.getElementById('number2').value = document.getElementById('number2_input').value;

      // Send via EmailJS (replace SERVICE_ID, TEMPLATE_ID, PUBLIC_KEY with your own â€“ instructions below)
      emailjs.sendForm('YOUR_SERVICE_ID', 'YOUR_TEMPLATE_ID', this)
        .then(function() {
          alert('Success! Your listing has been submitted. Check your email for confirmation.');
          document.getElementById('listingForm').style.display = 'none';
          this.reset();
        }, function(error) {
          alert('Oops! Something went wrong. Please try again or contact Ruth directly.');
          console.log(error);
        });
    });
  </script>

